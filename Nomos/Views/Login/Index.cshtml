@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nomos</title>


    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-mask/jquery.mask.min.js"></script>
    <script src="~/js/Login/Index.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link href="~/css/Login/Index.css" rel="stylesheet">
</head>



<body>

    <div class="container">

        <div class="row" id="pwd-container">
            <div class="col-md-4"></div>

            <div class="col-md-4">
                <section class="login-form">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Get, new { role = "login" }))
                    {
                        <img src="~/images/Logo64.png" class="img-responsive" alt="" style="margin-bottom: 0px;" />
                        <input id="CnpjEmpresa" name="CnpjEmpresa" type="text" placeholder="Cnpj" required class="form-control input-lg" value="" onkeypress="return isNumber(event)" />
                        <input id="NomeUsuario" name="NomeUsuario" type="text" placeholder="Usuário" required class="form-control input-lg" value="" />
                        <input id="Senha" name="Senha" type="password" class="form-control input-lg" placeholder="Senha" required="" />
                        <div class="pwstrength_viewport_progress"></div>
                        <button id="btnLogar" type="submit" name="go" class="btn btn-lg btn-primary btn-block">Logar</button>

                        if (!@ViewData.ModelState.IsValid)
                        {
                            <p></p>
                            <div>
                                <p class="text-danger">*@ViewData.ModelState["Validacao"].Errors[0].ErrorMessage</p>
                            </div>
                        }

                    }
                </section>
            </div>
        </div>
    </div>
</body>
</html>